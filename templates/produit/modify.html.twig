{% extends "base.html.twig" %}

{% block title produit.design %}

{% block body %}
    {{ form_start(form) }}
                
                <div style="display: flex; flex-wrap: wrap; justify-content: center; align-items: center; padding: 30px; position: relative; z-index: 1;">
			<div class="container col-sm-3" style="width: 500px; border-radius: 10px; overflow: hidden; padding: 55px 55px 37px 55px; background: #9152f8; background: -webkit-linear-gradient(top, #7579ff, #b224ef);">
				<div class="row">
					<div class="booking-form">
						<div class="form-header">
							<h1 style="display: block; font-family: Poppins-Bold; font-size: 39px; color: #333333; line-height: 1.2; text-align: center;">Modifier Produit</h1>
						</div>
							
								<div class="form-group mb-2">
									<span class="form-label">NUMPRO</span>
									{{ form_widget(form.numPro) }}
								</div>
							
							<div class="form-group mb-2">
								<span class="form-label">Designation</span>
								{{ form_widget(form.design) }}
							</div>
							<div class="form-group mb-2">
								<span class="form-label">Prix Unitaire</span>
								{{ form_widget(form.pu) }}
							</div>
							<div class="form-group mb-2">
								<span class="form-label">Stock</span>
								{{ form_widget(form.stock) }}
							</div>
                            <div style="" class="row">
                                <input type="submit" class="btn btn-primary shadow" id="button-addon2" value="Modifier">
                                    <button class="btn btn-secondary mt-2">
                                    <a href="{{ path('product_list') }}" class="text-decoration-none shadow">Retour</a>
                                    </button>
                            </div>
						</div>
                    </div>
                </div>
            </div>
        
    {{ form_end(form) }}
{% endblock %}

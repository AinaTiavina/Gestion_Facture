<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            
            
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>   
<body>
     <nav class=" navbar navbar-expand d-flex flex-column align-item-start "id="sidebar">
        <a href="" class="navbar-brand text-light mt-5">
           <div class="display-5 font-weight-bold">Menu</div>
        </a>
        
        <ul class="navbar-nav d-flex flex-column mt-5 w-100"id="navbarColor01">
        <hr>
            <li class="nav-item w-100">
                <a href="#cli"class=" nav-link text-light pl-4 "  data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="cli">Client</a>
                  <div id="cli" class="collapse " >
                    <a href="{{ path('client_create') }}"class=" nav-link text-light pl-4 col" >Ajout</a>
                    <a href="{{ path('client_list') }}"class="nav-link text-light pl-4 col" >Liste</a>
                  </div>
            </li>
            <li class="nav-item w-100">
                <a href="#pro"class="nav-link text-light pl-4 "  data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="pro">Produit</a>
                  <div id="pro" class="collapse " >
                    <a href="{{ path('product_create') }}"class="nav-link text-light pl-4 col" >Ajout</a>
                    <a href="{{ path('product_list') }}"class="nav-link text-light pl-4 col" >Liste</a>
                  </div>
            </li>
           <li class="nav-item w-100">
                <a href="#com"class="nav-link text-light pl-4 "  data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="com">Commande</a>
                  <div id="com" class="collapse " >
                    <a href="{{ path('command_create') }}"class="nav-link text-light pl-4 col" >Ajout</a>
                    <a href="{{ path('command_list') }}"class="nav-link text-light pl-4 col" >Liste</a>
                  </div>
            </li>
           <hr>  
        </ul>
          
      </nav> 
     
      <div class="p-4 my-container">
        <button class="navbar-toggler" id="menu-btn">
         Menu
        </button>
        {% for label, messages in app.flashes %}
            <div class="container mt-2">
                {% for message in messages %}
                    <div class="alert alert-dismissible alert-{{ label }}">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <h4 class="text-center">{{ message }}</h4>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
      </div>

      <script>
          var menu_btn = document.querySelector("#menu-btn")
          var slidebar = document.querySelector("#sidebar")
          var container = document.querySelector(".my-container")
          menu_btn.addEventListener("click",()=>{
          sidebar.classList.toggle("active-nav")
          container.classList.toggle("active-cont")})
      </script>
    
             


 </body>
</html>
